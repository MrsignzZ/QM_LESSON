/* miniprogram/pages/classify/classiify.wxss */
page,.main {
  height: 100%;
}
.category-left {
  float: left;
  width: 150rpx;
  height: 100%;
  border-right: 1px solid #ddd;
  box-sizing: border-box;
}
.category-right {
  float: right;
  width: 600rpx;
  height: 100%;
  overflow: hidden;
}
.category-left .things-list{
  height: 90rpx;
  font-size: 20rpx;
  letter-spacing: 1rpx;
  line-height: 90rpx;
  text-align: center;
  border-left: 3px solid #fff;
}
.category-left .things-list.on{
  font-size: 28rpx;
  color: #ab2b2b;
  border-color: #ab2b2b;
}
.things-box{
  height: 100%;
  padding:30rpx 30rpx 21rpx 30rpx;
  box-sizing: border-box;
}
.things-box .things-banner image{
  display: block;
  width: 100%;
  height: 190rpx;
  margin-bottom: 32rpx;
}

.product-list{
  display: inline-block;
  width: 160rpx;
  height: 160rpx;
  margin-right: 15rpx;
  text-align: center;
  font-size: 24rpx;
}
.product-list image{
  width: 144rpx;
  height: 144rpx;
}
.product-list:nth-child(3n){
  margin-right: 0;
}
