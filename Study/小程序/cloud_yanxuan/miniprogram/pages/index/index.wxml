<!--index.wxml-->
<view class="container">
  <van-search placeholder="搜索商品，共17176款好物"></van-search>
  <view class="adInfos">
    <swiper wx:if="{{ads.length}}" autoplay="true" indicator-dots="true" circular="true">
      <block wx:for="{{ads}}" wx:for-item="ad" wx:key="ad._id">
        <swiper-item>
          <image src="{{ad.pic}}" data-id="{{ad._id}}" mode="aspectFill" />
        </swiper-item>
      </block>
    </swiper>
  </view>
  <view class="servicePolicy">
    <ul class="servicePolicy-grow">
      <li class="servicePolicy-grow-item">
        <a href="#">
          <i class="icon"
          style="background-image:url(http://yanxuan.nosdn.127.net/cae45612b8aae577d8bd73338e2fc02c.png)"></i>
          <span class="text">网易自营品牌</span>
        </a>
      </li>
      <li class="servicePolicy-grow-item">
        <a href="#">
          <span class="text">30天无忧退货</span>
        </a>
      </li>
      <li class="servicePolicy-grow-item">
        <a href="#">
          <span class="text">48小时快速退款</span>
        </a>
      </li>
    </ul>
  </view>
  <view class="welfare">
    <a href="#">
      <image class="img"
      src="https://yanxuan.nosdn.127.net/964d055b8971d986f4f7878b6cd29802.jpg" />
    </a>
  </view>
</view>
